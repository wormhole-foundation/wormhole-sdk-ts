{
  "compilerOptions": {
    "lib": ["es2022"],
    "target": "es2022",
    "types": ["mocha", "chai", "node", "jest"],
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noErrorTruncation": true
  }
}
